<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :contents, "Your answer" %>
  <%= textarea f, :contents %>
  <%= error_tag f, :contents %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
